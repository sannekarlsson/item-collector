{
  "name": "item-collector",
  "version": "1.0.0",
  "description": "Full stack item collector",
  "private": true,
  "author": "Sanne Karlsson",
  "license": "MIT",
  "scripts": {
    "api": "npm start -C api -s",
    "dev": "npm-run-all -p dev:api dev:frontend",
    "dev:api": "npm run dev -C api -s",
    "dev:frontend": "npm run dev -C frontend -s",
    "frontend": "npm start -C frontend -s",
    "install:api": "npm i -C api",
    "install:frontend": "npm i -C frontend",
    "postinstall": "npm-run-all -p install:api install:frontend",
    "start": "npm-run-all -p api frontend",
    "test": "npm run test:api -s",
    "test:api": "npm test -C api"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}