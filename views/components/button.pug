mixin button(type, option, text)
    -var typeLow = type.toLowerCase()

    button(class='btn '+ typeLow +'-btn')&attributes(attributes) 
        span.center
            include svg-use-symbol
            +svg-use-symbol(typeLow)
            if option
                +svg-use-symbol(option.toLowerCase())
            span.btn-text= text || type
