{
  "name": "api",
  "version": "1.0.0",
  "description": "Backend API for item collector",
  "private": true,
  "author": "Sanne Karlsson",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon api-server.js",
    "mongo": "mongod",
    "mongo:close": "kill $(lsof -t -i :27017) # :27017 is the mongod port",
    "postjest": "npm run mongo:close -s",
    "postjest:watch": "npm run mongo:close -s",
    "predev": "npm test",
    "start": "node api-server.js",
    "jest": "jest --coverage",
    "jest:watch": "jest --watchAll --coverage",
    "test": "npm-run-all -p mongo jest",
    "test:watch": "npm-run-all -p mongo jest:watch"
  },
  "dependencies": {
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "helmet": "^3.21.2",
    "mongoose": "^5.7.5"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
